{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist/types",
        "jsx": "react-jsx",
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "paths": {
            "chat-widget": ["./lib/index.ts"]
        }
    },
    "include": ["lib/**/*"],
    "exclude": ["**/*.test.*", "**/*.spec.*", "node_modules"]
}
