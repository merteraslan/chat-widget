{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "ES2022",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "rootDir": "./",
        "paths": {
            "chat-widget": ["./lib/index.ts"]
        },
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": ["src/**/*", "lib/**/*"]
}
